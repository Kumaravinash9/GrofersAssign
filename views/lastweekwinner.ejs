<link
    rel="stylesheet"
    href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
    crossorigin="anonymous"
/>
<nav
    class="navbar navbar-expand navbar-dark bg-dark fixed-top justify-content-between"
>
    <a class="navbar-brand" href="/campground">LuckyDraw</a>
    <ul class="navbar-nav">
        <li class="nav-item">
            <a href="/getlastweekwinner/api"
                ><button
                    class="btn btn-outline-success my-2 my-sm-0 text-black border-black ml-2"
                    type="submit"
                >
                    LastWeekWinnersAPI
                </button>
            </a>
        </li>
    </ul>
</nav>

<section class="container mt-5 pt-1">
    <%luckdraws.forEach(function(luckdraws){%>
    <div class="d-flex justify-content-between m-3 border-bottom">
        <h4>Winners</h1>
        <a class="form-inline" href="/<%-luckdraws._id%>/winners">
            <button
                class="btn btn-outline-success my-2 my-sm-0 text-black border-black"
                type="submit"
            >
                Get API
            </button>
        </a>
    </div>
    <table class="table border">
        <thead class="thead-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Prizes</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>

                <td>
                    <%
                    if(luckdraws['winners']['first_postion']['name']===undefined){%>
                    Yet not Announced <%} else{%> <%-
                    luckdraws['winners']['first_postion']['name']%> <%}%>
                </td>

                <td style="font-weight: 800">
                    <% if(luckdraws['first_prize']===undefined){%> Yet not
                    Decided <%} else{%> <%-
                    luckdraws['first_prize'].toUpperCase()%> <%}%>
                </td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td>
                    <%
                    if(luckdraws['winners']['second_position']['name']===undefined){%>
                    Yet not Announced <%} else{%> <%-
                    luckdraws['winners']['second_position']['name']%> <%}%>
                </td>

                <td style="font-weight: 800">
                    <% if(luckdraws['second_prize']===undefined){%> Yet not
                    Decided <%} else{%> <%-
                    luckdraws['second_prize'].toUpperCase()%> <%}%>
                </td>
            </tr>
            <tr>
                <th scope="row">3</th>
                <td>
                    <%
                    if(luckdraws['winners']['third_position']['name']===undefined){%>
                    Yet not Announced <%} else{%> <%-
                    luckdraws['winners']['third_position']['name']%> <%}%>
                </td>

                <td style="font-weight: 800">
                    <% if(luckdraws['third_prize']===undefined){%> Yet not
                    Decided <%} else{%> <%-
                    luckdraws['third_prize'].toUpperCase()%> <%}%>
                </td>
            </tr>
        </tbody>
    </table>
    <%})%>
</section>
